@model List<BookingApiViewModel.Result>


@{
    Layout = null;
    int count = 0;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div class="row">


            @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
            {
                <label>Enter City ID</label>
                <input type="text" class="form-control" name="cityID" />
                <button class="btn btn-outline-dark mt-2">Find Hotel</button>
            }

            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Hotel Name</th>
                        <th>Hotel Score</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.name</td>
                            <td>@item.reviewScore</td>
                            <td><a href="#" class="btn btn-outline-dark">Details</a></td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>


























    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
