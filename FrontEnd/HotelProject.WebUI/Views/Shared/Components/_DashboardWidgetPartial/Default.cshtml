<div class="row">
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-1">
            <div class="card-body">
                <h3 class="card-title text-white">Number Of Staffs</h3>
                <div class="d-inline-block">
                    <h2 class="text-white"><strong>@ViewBag.StaffCount</strong></h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa-solid fa-helmet-safety"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-2">
            <div class="card-body">
                <h3 class="card-title text-white">Reservations</h3>
                <div class="d-inline-block">
                    <h2 class="text-white"><strong>@ViewBag.BookingCount</strong></h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-money"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-3">
            <div class="card-body">
                <h3 class="card-title text-white">Total Customers</h3>
                <div class="d-inline-block">
                    <h2 class="text-white">@ViewBag.CustomerCount</h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-users"></i></span>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-sm-6">
        <div class="card gradient-4">
            <div class="card-body">
                <h3 class="card-title text-white">Customers</h3>
                <div class="d-inline-block">
                    <h2 class="text-white"><strong>@ViewBag.RoomCount</strong></h2>
                    <p class="text-white mb-0">@DateTime.Now.ToString("MMMM") - @DateTime.Now.Year</p>
                </div>
                <span class="float-right display-5 opacity-5"><i class="fa fa-heart"></i></span>
            </div>
        </div>
    </div>
</div>