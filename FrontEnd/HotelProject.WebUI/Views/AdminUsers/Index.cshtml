@*@model List<HotelProject.EntityLayer.Concrete.AppUser>*@
@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1><span style="color:#ff6a00">Users</span></h1>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Full Name</th>
                                    <th>City</th>
                                    <th>Country</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                    @*<th>Edit</th>*@
                                </tr>
                            </thead>
                            <tbody> 
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td><img src="@item.AppUserImage" class=" rounded-circle mr-3" alt=""></td>
                                        <td>@item.AppUserFirstName @item.AppUserLastName</td>
                                        <td>@item.AppUserCity</td>
                                        <td>@item.AppUserCountry</td>
                                        @if (@item.AppUserGender == "Erkek")
                                        {
                                            <td><i class="fa-solid fa-person" style="color:#1022e6"></i>Erkek</td>
                                        }
                                        @if (@item.AppUserGender == "Bayan" || item.AppUserGender=="Kadın")
                                        {
                                            <td><i class="fa-solid fa-person-dress" style="color:#e29c0b"></i>Bayan</td>
                                        }

                                        <td><i class="fa fa-circle-o text-success  mr-2"></i>Aktif</td>
                                        @*<td>
            <a href="/Staff/DeleteStaff/@item.StaffID"><span class="text-danger"><i class="fa-solid fa-trash"></i></span></a>
            <a href="/Staff/UpdateStaffData/@item.StaffID" style="margin-left:7px"><span class="text-succes"><i class="fa-solid fa-pen-to-square"></i></span></a>
        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Register/Index/" class="btn btn-dark mt-3">New User</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>