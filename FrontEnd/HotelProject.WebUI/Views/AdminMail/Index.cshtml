@model AdminMailViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@*Admin Mail controller Index*@

<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <label  class="font-weight-bold">Receiver Mail Address</label>
                <input type="text" class="form-control" asp-for="ReceiverMail" />
            </div>

            <div class="col-12">
                <label class="font-weight-bold">Subject</label>
                <input type="text" class="form-control" asp-for="Mailsubject" />
            </div>

            <div class="col-12 mt-2">
                <label class="font-weight-bold">Content</label>               
                <textarea class="form-control" rows="6" asp-for="MailBody"></textarea>
            </div>
        </div>
        <button class="btn btn-dark mt-2" type="submit">Send</button>
    </div>
</form>


