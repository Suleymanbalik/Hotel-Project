@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Testimonial Image</th>
                    <th>Testimonial Name</th>
                    <th>Testimonial Title</th>
                    <th>Testimonial Description</th>
                    <th>Edit</th>
                    <th>Details</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>                        
                        <td>@item.TestimonialID</td>
                        <td>@item.TestimonialImage</td>
                        <td>@item.TestimonialFullName</td>
                        <td>@item.TestimonialTitle</td>
                        <td>@item.TestimonialDescripton</td>
                        <td>
                            <a href="/Staff/DeleteStaff/@item.TestimonialID"><span class="text-danger"><i class="fa-solid fa-trash"></i></span></a>
                            <a href="/Staff/UpdateStaffData/@item.TestimonialID" style="margin-left:7px"><span class="text-succes"><i class="fa-solid fa-pen-to-square"></i></span></a>
                        </td>
                        <td> <a href="#"><span class="text-warning"><i class="fa-solid fa-circle-info"></i></span></a></td>
                    </tr>
                </tbody>
            }
        </table>
        <a class="btn btn-dark my-2" href="/Staff/AddStaff/">Add Staff</a>
    </div>

</div>

