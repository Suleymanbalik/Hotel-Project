@model List<HotelProject.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}
@*RoleController Index*@

<div class="row">
    <h1><span style="color:#ff6a00">Role List</span></h1> <h1 class=" ms-4 fs-1"><span class="text-opacity-25 text-info"><i class="fa-solid fa-rectangle-list"></i></span></h1>
</div>


<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Role Name</th>                    
                    <th>Edit</th>                   
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>                        
                        <td>
                            <a href="/Role/DeleteRole/@item.Id"><span class="text-danger"><i class="fa-solid fa-trash"></i></span></a>
                            <a href="/Role/GetRoleData/@item.Id" style="margin-left:7px"><span class="text-succes"><i class="fa-solid fa-pen-to-square"></i></span></a>
                        </td>                       
                    </tr>
                </tbody>
            }
        </table>
        <a class="btn btn-dark my-2" href="/Role/AddRole/">Add Role</a>
    </div>
</div>
