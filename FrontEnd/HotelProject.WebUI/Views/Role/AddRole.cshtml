@model HotelProject.WebUI.Models.Role.AddRoleViewModel
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1><span style="color:#ff6a00">AddRole</span></h1>

<form method="post">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <label>Role Name</label>
                <input type="text" asp-for="RoleName" class="form-control" />              
            </div>           
            <br />
        </div>
    </div>
    <button class="btn btn-info mt-2">Add Role</button>
</form>