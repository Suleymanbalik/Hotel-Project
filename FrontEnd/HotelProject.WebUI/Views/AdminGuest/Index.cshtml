@model List<ResultGuestDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

@*Admin Guest Index*@

<div class="container">
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>City</th>
                    <th>Edit</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                count++;
                <tbody>
                    <tr>
                        <td>@count</td>
                        <td>@item.GuestFirstName</td>
                        <td>@item.GuestLastName</td>
                        <td>@item.GuestCity</td>
                        <td>
                            <a href="/AdminGuest/DeleteGuest/@item.GuestID"><span class="text-danger"><i class="fa-solid fa-trash"></i></span></a>
                            <a href="/AdminGuest/UpdateGuest/@item.GuestID" style="margin-left:7px"><span class="text-succes"><i class="fa-solid fa-pen-to-square"></i></span></a>
                        </td>                       
                    </tr>
                </tbody>
            }
        </table>
        <a class="btn btn-dark my-2" href="/AdminGuest/AddGuest/">Add Guest</a>
    </div>

</div>
