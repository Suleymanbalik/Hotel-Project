@model HotelProject.WebUI.Models.Settings.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@*SettingsController Index*@
<h1>Profile Settings</h1>
<form method="post">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <label>First Name</label>
                <input type="text" asp-for="SettingsUserFirstName" class="form-control" />
            </div>

            <div class="col-12">
                <label>Last Name</label>
                <input type="text" asp-for="SettingsUserLastName" class="form-control" />
            </div>

            <div class="col-12">
                <label>User Name</label>
                <input type="text" asp-for="SettingsUserName" class="form-control" readonly />
            </div>

            <div class="col-12">
                <label>Email Address</label>
                <input type="email" asp-for="SettingsUserEmail" class="form-control" />
            </div>

            <div class="col-12">
                <label>Password</label>
                <input type="password" asp-for="SettingsUserPassword" class="form-control" />
            </div>

            <div class="col-12">
                <label>Confirm Password</label>
                <input type="password" asp-for="SettingsUserConfirmPassword" class="form-control" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-warning mt-3">Update Settings</button>

</form>
