@model UpdateBookingDto
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>UpdateBooking</h1>

<form class="has-validation" method="post">
    <div class="container">
        <div class="row">
            <input type="hidden" asp-for="BookingID" />
            <div class="col-12">
                <label>Fuul Name</label>
                <input type="text" asp-for="BookingFullName" class="form-control" />

            </div>

            <div class="col-12">
                <label>Mail Address</label>
                <input type="email" asp-for="BookingMail" class="form-control" />

            </div>

            <div class="col-12">
                <label>Chechk In</label>
                <input type="date" asp-for="BookingCheckIn" class="form-control" />

            </div>

            <div class="col-12">
                <label>Check Out</label>
                <input type="date" asp-for="BookingCheckOut" class="form-control" />

            </div>

            <div class="col-12">
                <label>Adult</label>
                <input type="text" asp-for="BookingAdultCount" class="form-control" />

            </div>

            <div class="col-12">
                <label class="d-block">Children</label>
                <input type="text" asp-for="BookingChildCount" class="form-control" />

            </div>

            <div class="col-12">
                <label>Room</label>
                <input type="text" asp-for="BookingRoomCount" class="form-control" />

            </div>

            <div class="col-12">
                <label>Status</label>
                <input type="text" asp-for="BookingStatus" class="form-control" />

            </div>

            <div class="col-12">
                <label>Special Request</label>
                <textarea type="text" rows="5" asp-for="BookingSpecialRequest" class="form-control"></textarea>
            </div>

            <div class="col-12">
                <label>Description</label>
                <input type="text" asp-for="BookingDescription" class="form-control" />

            </div>
            <br />
        </div>
    </div>
    <button class="btn btn-info mt-2">Update Booking</button>
</form>
