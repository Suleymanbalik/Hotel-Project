@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

@*Staff index View*@
<div class="container">
    <div class="row">
        <table class="table">
            <thead>
               <tr>
                   <th>#</th>
                   <th>Full Name</th>
                   <th>Title</th>
                   <th>Edit</th>
                   <th>Details</th>
               </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>@item.StaffID</td>
                        <td>@item.StaffFullName</td>
                        <td>@item.StaffTitle</td>
                        <td>
                            <a href="/Staff/DeleteStaff/@item.StaffID"><span class="text-danger"><i class="fa-solid fa-trash"></i></span></a>
                            <a href="/Staff/UpdateStaffData/@item.StaffID" style="margin-left:7px"><span class="text-succes"><i class="fa-solid fa-pen-to-square"></i></span></a>
                        </td>
                        <td> <a href="#"><span class="text-warning"><i class="fa-solid fa-circle-info"></i></span></a></td>
                    </tr>
                </tbody>
            }          
        </table>
        <a class="btn btn-dark my-2" href="/Staff/AddStaff/">Add Staff</a>
    </div>
   
</div>

